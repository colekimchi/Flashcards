<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorQuestion"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/fcQ_44thPresident"
        android:textColor="@android:color/black"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="flashcard question" />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/colorAnswer"
        android:padding="5dp"
        android:text="@string/fcA_44thPresident"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="flashcard answer"
        tools:visibility="visible" />

</RelativeLayout>